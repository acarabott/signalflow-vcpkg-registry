vcpkg_from_github(
  OUT_SOURCE_PATH SOURCE_PATH
  REPO acarabott/signalflow
  REF 2c9b527e36e7d5661d13d78bd78ba13e540e90f0
  SHA512 44fe1eb3f4e0f222749135668bc26eead54488169882a9736c42e4779bca1d50362baf5273617c3a26a81dae340d50a68717d9409548c426de69b013a1bf588f
  HEAD_REF master
)

vcpkg_check_features(OUT_FEATURE_OPTIONS FEATURE_OPTIONS
  FEATURES
    soundio   CMAKE_BUILD_SOUNDIO
    fileio    CMAKE_BUILD_FILEIO
    python    CMAKE_BUILD_PYTHON
    vamp      CMAKE_BUILD_VAMP
)

vcpkg_configure_cmake(
  SOURCE_PATH ${SOURCE_PATH}
  PREFER_NINJA
  OPTIONS
    ${FEATURE_OPTIONS}
)

vcpkg_install_cmake()

file(INSTALL "${SOURCE_PATH}/source/include/" DESTINATION "${CURRENT_PACKAGES_DIR}/include")

file(REMOVE_RECURSE ${CURRENT_PACKAGES_DIR}/debug/include)

file(
  INSTALL ${SOURCE_PATH}/LICENSE.md
  DESTINATION ${CURRENT_PACKAGES_DIR}/share/${PORT}
  RENAME copyright)
